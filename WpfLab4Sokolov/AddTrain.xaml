<Window x:Class="WpfLab4Sokolov.AddTrain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLab4Sokolov"
        mc:Ignorable="d"
        Title="AddTrain" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
         
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Text="Номер поезда" Grid.Row="0" Name="tbID" Margin="10 15"/>
        <TextBox Text="Название пункта" Grid.Row="1" Name="tbName" Margin="10 15"/>
        <TextBox Text="Время" Grid.Row="2" Name="tbHealth" Margin="10 15"/>
    
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Да" Grid.Column="0" Margin="15" Click="Button_Click"/>
            <Button Content="Отмена" Grid.Column="1" Margin="15" Click="Button_Click_1"/>
        </Grid>
    </Grid>
</Window>
